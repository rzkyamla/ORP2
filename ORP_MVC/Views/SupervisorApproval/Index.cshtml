<div class="container-fluid mt-5">
    <table id="myTable" class="table table-striped table-bordered" styles="widht:100%">
        <thead>
            <tr>
                <th>No</th>
                <th>Customer Id</th>
                <th>NIK</th>
                <th>Overtime Form Id</th>
                @*<th>Detail Overtime Request Id</th>*@
                <th>Status</th>
                <th>Action</th>

            </tr>
        </thead>
        <tbody></tbody>
        <tfoot>
            <tr>
                <th>No</th>
                <th>Customer Id</th>
                <th>NIK</th>
                <th>Overtime Form Id</th>
                @*<th>Detail Overtime Request Id</th>*@
                <th>Status</th>
                <th>Action</th>
            </tr>
        </tfoot>
    </table>
</div>

@section scripts
{
    <script>
        var table = null;
        $(document).ready(function () {
            table = $("#myTable").DataTable({
                "filter": true,
                "orderMulti": false,
                "ajax": {
                    "url": "https://localhost:44346/api/overtimeformemployee",
                    "type": "get",
                    "datatype": "json",
                    "dataSrc": "data"
                },
            @* "columnDefs": [
                {
                    "targets": [1],
                    "visible": false,

                },
                {
                    "targets": [0, 2],
                    "searchable": true
                },
                {
                    "targets": [3],
                    "searchable": false,
                    "orderable": false
                }
            ],*@
                "columns": [
                    {
                        "data": null,
                        "render": function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },
                    {
                        "data": 'Customer.Id',
                        "render": function (data, type, row, meta) {
                            return row['CustomerId'];
                        },
                        "autoWidth": true
                    },
                    {
                        "data": null,
                        "render": function (data, type, row) {
                            return row['nik'];
                        },
                        "autoWidth": true
                    },
                    {
                        "data": 'OvertimeForm.Id',
                        "render": function (data, type, row, meta) {
                            return row['OvertimeFormId'];
                        },
                        "autoWidth": true
                    },
                    {
                        "data": null,
                        "render": function (data, type, row) {
                            return row['status'];
                        },
                        "autoWidth": true
                    },
                    {
                        "render": function (data, type, row, meta) {
                            return '<a href="javascript:void(0)" class="far fa-edit table-action text-dark" data-toggle="tooltip" data-placement="top" title="Approve" onclick="Get(\'' + row['id'] + '\')"></a> ' +
                                '<a href="javascript:void(0)" class="fa fa-trash table-action text-danger" data-toggle="tooltip" data-placement="top" title="Reject" onclick="Delete(\'' + row['id'] + '\')"></a>'
                        }
                    }
                ]
            });
        });
    </script>

}