                },
                {
                    "data": null,
                    "render": function (data, type, row) {
                        return row['endtime'];
                    },
                    "autoWidth": true
                },
                {
                    "data": null,
                    "render": function (data, type, row) {
                        return row['act'];
                    },
                    "autoWidth": true
                },
                {
                    "data": null,
                    "render": function (data, type, row) {
                        return row['addsalary'];
                    },
                    "autoWidth": true
                },
