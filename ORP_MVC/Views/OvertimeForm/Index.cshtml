        <tbody></tbody>
        <tfoot>
            <tr>
                <th>No</th>
                <th>Start Time</th>
                <th>End Time</th>
                <th>Activity</th>
                <th>Additional Salary</th>
                <th>Action</th>
            </tr>
        </tfoot>
    </table>
</div>
<button type="button" class="btn btn-primary" onclick="CreateOvertime()">Submit</button>
@section scripts
