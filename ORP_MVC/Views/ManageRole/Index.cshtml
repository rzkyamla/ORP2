<div class="container-fluid mt-5">
    <div class="card card-default" style="margin-left:150px;margin-bottom:150px;">
        <table id="myTable" class="table table-striped table-bordered" styles="widht:100%">
            <thead>
                <tr>
                    <th>No</th>
                    <th>NIK</th>
                    <th>Name</th>
                    <th hidden>Birth Date</th>
                    <th hidden>Gender</th>
                    <th hidden>Religion</th>
                    <th>Email</th>
                    <th hidden>Phone Number</th>
                    <th>Role</th>
                    <th>Customer</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody></tbody>
            <tfoot>
                <tr>
                    <th>No</th>
                    <th>NIK</th>
                    <th>Name</th>
                    <th hidden>Birth Date</th>
                    <th hidden>Gender</th>
                    <th hidden>Religion</th>
                    <th>Email</th>
                    <th hidden>Phone Number</th>
                    <th>Role</th>
                    <th>Customer</th>
                    <th>Action</th>
                </tr>
            </tfoot>
        </table>
    </div>
    <div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="addModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addModalLabel" style="color:white"><b>Change Role</b></h5>
                </div>
                <div class="modal-body">
                    <form id="formRole">
                        <div class="col-6">
                            <div class="form-group" hidden>
                                <label for="nik" class="col-form-label">NIK</label>
                                <input type="text" class="form-control" id="nik">
                            </div>
                            <div class="form-group" hidden>
                                <label for="name" class="col-form-label">Name</label>
                                <input type="text" class="form-control" id="name">
                            </div>
                            <div class="form-group" hidden>
                                <label for="birthdate" class="col-form-label">Birth Date</label>
                                <input type="text" class="form-control" id="birthdate">
                            </div>
                            <div class="form-group" hidden>
                                <label for="gender" class="col-form-label">Gender</label>
                                <input type="text" class="form-control" id="gender">
                            </div>
                            <div class="form-group" hidden>
                                <label for="religion" class="col-form-label">Religion</label>
                                <input type="text" class="form-control" id="religion">
                            </div>
                            <div class="form-group" hidden>
                                <label for="email" class="col-form-label">Email</label>
                                <input type="email" class="form-control" id="email">
                            </div>
                            <div class="form-group" hidden>
                                <label for="phonenumber" class="col-form-label">Phone Number</label>
                                <input type="text" class="form-control" id="phonenumber">
                            </div>
                            <div class="form-group">
                                <label for="roleId" class="col-form-label">Role</label>
                                <select id="roleid" class="form-control" name="roleid">
                                    <option value="1">Admin</option>
                                    <option value="2">Relational Manager</option>
                                    <option value="3">Supervisor</option>
                                    <option value="4">Employee</option>
                                </select>
                            </div>
                            <div class="form-group" hidden>
                                <label for="customerid" class="col-form-label">Customer</label>
                                <input type="text" class="form-control" id="customerid">
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" onclick="UpdateRole()">Submit</button>
