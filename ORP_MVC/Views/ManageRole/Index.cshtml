@section scripts
{
    <script>
        var table = null;
        $(document).ready(function () {
            table = $("#myTable").DataTable({
                "filter": true,
                "orderMulti": false,
                "ajax": {
                    "url": "https://localhost:44346/api/employee",
                    "type": "get",
                    "datatype": "json",
                    "dataSrc": "data"
                },
                "columnDefs": [
                    {
                        "targets": [3, 4, 5, 7],
                        "visible": false,
                    }
                ],
                "columns": [
                    {
                        "data": null,
                        "render": function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },
                    {
                        "data": 'nik'
                    },
                    {
                        "data": 'name'
                    },
                    {
                        "data": 'birthDate'
                    },
                    {
                        "data": 'gender'
                    },
                    {
                        "data": 'religion'
                    },
                    {
                        "data": 'email'
                    },
                    {
                        "data": 'phoneNumber'
                    },
                    {
                        "data": "roleId",
                        "render": function (roleId) {
                            if (roleId == "1") {
                                return "Admin";
                            }
                            else if (roleId == "2") {
                                return "Relational Manager";
                            }
                            else if (roleId == "3") {
                                return "Supervisor";
                            }
                            else {
                                return "Employee"
                            }
                        }
                    },
                    {
                        "data": 'customerId',
                        "render": function (customerId) {
                            if (customerId == "1") {
                                return "Metrodata MII";
                            }
                            else if (customerId == "2") {
                                return "Bank BCA";
                            }
                            if (customerId == "3") {
                                return "Bank BNI";
                            }
                            else {
                                return "Bank BRI";
                            }
                        }
                    },
                    {
                        "render": function (data, type, row, meta) {
                            return '<a href="javascript:void(0)" class="far fa-edit table-action text-dark" data-toggle="tooltip" data-placement="top" title="Edit" onclick="Get(\'' + row['nik'] + '\')"></a>'
                        }
                    }
                ]
            });
        });

        function Get(id) {
            console.log(id);
            $.ajax({
                url: "/ManageRole/Get",
                data: { id: id }
            }).done((result) => {
                console.log(result);
                var obj = JSON.parse(result);
                $("#addModal").modal("show");
                $("#nik").val(obj.data.nik);
                $("#name").val(obj.data.name);
                $("#birthdate").val(obj.data.birthDate);
                $("#gender").val(obj.data.gender);
                $("#religion").val(obj.data.religion);
                $("#email").val(obj.data.email);
                $("#phonenumber").val(obj.data.phoneNumber);
                $("#roleid").val(obj.data.roleId);
                $("#customerid").val(obj.data.customerId);
            }).fail((error) => {
                console.log(error);
            })
        }

        function UpdateRole(nik) {
            var Employee = new Object();
            Employee.nik = $("#nik").val();
            Employee.name = $("#name").val();
            Employee.birthDate = $("#birthdate").val();
            Employee.gender = $("#gender").val();
            Employee.religion = $("#religion").val();
            Employee.email = $("#email").val();
            Employee.phoneNumber = $("#phonenumber").val();
            Employee.roleId = $("#roleid").val();
            Employee.customerId = $("#customerid").val();
            $.ajax({
                type: "put",
                url: '/ManageRole/UpdateRole',
                data: Employee
            }).done((result) => {
                if (result == 200) {
                    //swal("Data Succesfully Updated");
                    swal({
                        position: 'top-end',
                        icon: 'success',
                        title: 'Data Succesfully Updated',
                        showConfirmButton: false,
                        timer: 1500
                    })
                    $('#addModal').modal('hide')
                    table.ajax.reload();
                }
                else {
                    console.log(result);
                    swal({
                        position: 'top-end',
                        icon: 'error',
                        title: 'Data Failed Updated',
                        showConfirmButton: false,
                        timer: 1500
                    })
                    //swal("Data Failed Updated");
                }
            })
        }
    </script>
}
