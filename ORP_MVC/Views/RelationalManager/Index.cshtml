    </div>
</div>

<div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="addModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addModalLabel"><b>Details</b></h5>
            </div>
            <div class="modal-body">
                <form id="formRole">
                    <div class="form-group" hidden>
                        <label for="id" class="col-form-label">Id</label>
                        <input type="text" class="form-control" id="id">
                    </div>
                    <div class="form-group" hidden>
                        <label for="customerId" class="col-form-label">Customer Id</label>
                        <input type="text" class="form-control" id="customerId" readonly>
                    </div>
                    <div class="form-group" hidden>
                        <label for="nik" class="col-form-label">NIK</label>
                        <input type="text" class="form-control" id="nik" readonly>
                    </div>
                    <div class="form-group" hidden>
                        <label for="overtimeFormId" class="col-form-label">Overtime Form Id</label>
                        <input type="text" class="form-control" id="overtimeFormId" readonly>
                    </div>
                    <div class="form-group" hidden>
                        <label for="status" class="col-form-label">Status</label>
                        <input type="text" class="form-control" id="status" readonly>
                    </div>
                    <div class="form-group">
                        <label for="employeeName" class="col-form-label">Employee Name</label>
                        <input type="text" class="form-control" id="employeeName" readonly>
                    </div>
                    <div class="form-group">
                        <label for="subDate" class="col-form-label">Submission Date</label>
                        <input type="text" class="form-control" id="subDate" readonly>
                    </div>
                    <div class="form-group">
                        <label for="customer" class="col-form-label">Company Client</label>
                        <input type="text" class="form-control" id="customer" readonly>
                    </div>
                    <br />
                    <h6><b>Request Details</b></h6>
                    <ol id="reqList">
                    </ol>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" onclick="Approve()">Approve</button>
                <button type="button" class="btn btn-danger" onclick="Reject()">Reject</button>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script>
        var table = null;
        $(document).ready(function () {
            table = $("#myTable").DataTable({
                "filter": true,
                "orderMulti": false,
                "ajax": {
                    "url": "https://localhost:44346/api/overtimeformemployee",
                    "type": "get",
                    "datatype": "json",
                    "dataSrc": "data"
                },
                "columnDefs": [
                    {
                        "targets": [1],
                        "visible": false
                    },
                    {
                        "targets": [6],
                        "sortable": false
                    }
                ],
                "columns": [
                    {
                        "data": null,
                        "render": function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },
                    {
                        "data": 'id'
                    },
                    {
                        "data": 'customerId',
                        "render": function (customerId) {
                            if (customerId == "1") {
                                return "Metrodata MII";
                            }
                            else if (customerId == "2") {
                                return "Bank BCA";
                            }
                            if (customerId == "3") {
                                return "Bank BNI";
                            }
                            else {
                                return "Bank BRI";
                            }
                        }

                    },
                    {
                        "data": 'nik'
                    },
                    {
                        "data": 'overtimeFormId'
                    },
                    {
                        "data": 'status',
                        "render": function (status) {
                            if (status == "0") {
                                return "Waiting for Approval";
                            }
                            else if (status == "1") {
                                return "Approved by Supervisor";
                            }
                            else if (status == "2") {
                                return "Approved by Manager";
                            }
                            else {
                                return "Rejected";
                            }
                        }
                    },
                    {
                        "render": function (data, type, row, meta) {
                            return '<a href="javascript:void(0)" class="fas fa-plus-square text-dark" data-toggle="tooltip" data-placement="top" title="Approve" onclick="Get(\'' + row['id'] + '\')"></a> '

                        }
                    }
                ]
            });
        });

        
        function Get(id) {
            $.ajax({
                url: "/RelationalManager/Get",
                data: { id: id }
            }).done((result) => {
                console.log(result);
                var obj = JSON.parse(result);
                let hasil = "";
                $("#addModal").modal("show");
                $("#id").val(obj.data.id);
                $("#customerId").val(obj.data.customerId);
                $("#nik").val(obj.data.nik);
                $("#overtimeFormId").val(obj.data.overtimeFormId);
                $("#status").val(obj.data.status);
                $("#employeeName").val(obj.data.employee.name);
                $("#customer").val(obj.data.employee.customer.name);
                $("#subDate").val(moment(obj.data.overtimeForm.submissionDate).format('DD/MM/YYYY'));
                $.each(obj.data.overtimeForm.detailOvertimeReq, function (key, value) {
                    hasil += '<li>' + value.startTime + ' / ' + value.endTime + ' / ' + value.act + '</li>';
                });
                $("#reqList").html(hasil);
            }).fail((error) => {
                console.log(error);
            })
        }

        function Approve(id) {

            var approve = new Object();
            approve.id = $("#id").val();
            approve.customerId = $("#customerId").val();
            approve.nik = $("#nik").val();
            approve.overtimeFormId = $("#overtimeFormId").val();
            approve.status = 2;
            console.log(approve);
            $.ajax({
                url: "/RelationalManager/RelationalManagerApproval",
                type: "put",
                data: approve
            }).done((result) => {
                if (result == 200) {
                    swal({
                        title: "Success!",
                        text: "Data Updated",
                        icon: "success",
                        button: "Ok",
                    });
                    $('#addModal').modal('hide')
                    table.ajax.reload();
                } else if (result == 400) {
                    swal("failed to Update data", {
                        icon: "warning",
                    });
                } else {
                    swal("failed to Update data", {
                        icon: "warning",
                    });
                }
            }).fail((error) => {
                console.log(error);
            });
        }

        function Reject(id) {

            var reject = new Object();
            reject.id = $("#id").val();
            reject.customerId = $("#customerId").val();
            reject.nik = $("#nik").val();
            reject.overtimeFormId = $("#overtimeFormId").val();
            reject.status = 3;
            console.log(reject);
            $.ajax({
                url: "/RelationalManager/RelationalManagerRejected",
                type: "put",
                data: reject
            }).done((result) => {
                if (result == 200) {
                    swal({
                        title: "Reject!",
                        text: "Data Updated",
                        icon: "success",
                        button: "Ok",
                    });
                    $('#addModal').modal('hide')
                    table.ajax.reload();
                } else if (result == 400) {
                    swal("failed to Update data", {
                        icon: "warning",
                    });
                    $('#addModal').modal('hide')
                } else {
                    swal("failed to Update data", {
                        icon: "warning",
                    });
                    $('#addModal').modal('hide')
                }
            }).fail((error) => {
                console.log(error);
                swal("failed to Update data", {
                    icon: "warning",
                });
                $('#addModal').modal('hide')
            });
        }
    </script>
}
