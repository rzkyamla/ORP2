<div class="container-fluid mt-5">
    <div class="card-card default" style="margin-left:150px;margin-bottom:150px">
        <h3>Relational Manager Approval Page</h3>
        <table id="myTable" class="table table-striped table-bordered" styles="widht:100%">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Id</th>
                    <th>Customer Name</th>
                    <th>NIK</th>
                    <th>Overtime Form Id</th>
                    <th>Status</th>
                    <th>Action</th>

                </tr>
            </thead>
            <tbody></tbody>
            <tfoot>
                <tr>
                    <th>No</th>
                    <th>Id</th>
                    <th>Customer Name</th>
                    <th>NIK</th>
